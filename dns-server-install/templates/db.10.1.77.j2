;
; BIND reverse data file for local loopback interface
;
$TTL    604800
@       IN      SOA     {{ dns_host }}.{{ domain_name }}. admin.{{ domain_name }}. (
                              1         ; Serial
                         604800         ; Refresh
                          86400         ; Retry
                        2419200         ; Expire
                         604800 )       ; Negative Cache TTL
;
@       IN      NS      {{ dns_host }}.{{ domain_name }}.

5       IN      PTR     {{ dns_host }}.{{ domain_name }}
15      IN      PTR     {{ proxy_host }}.{{ domain_name }}
254     IN      PTR     fw-frontend.{{ domain_name }}