;
; BIND reverse data file for local loopback interface
;
$TTL    604800
@       IN      SOA     {{ dns_host }}.{{ domain_name }}. admin.{{ domain_name }}. (
                              1         ; Serial
                         604800         ; Refresh
                          86400         ; Retry
                        2419200         ; Expire
                         604800 )       ; Negative Cache TTL
;
@       IN      NS      {{ dns_host }}.{{ domain_name }}.

2       IN      PTR     esxi-r820.{{ domain_name }}
3       IN      PTR     vcenter.{{ domain_name }}
11      IN      PTR     {{ admin_hostname }}.{{ domain_name }}
254     IN      PTR     fw-backend.{{ domain_name }}
